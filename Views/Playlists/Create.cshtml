@model dynamic

@{
    ViewData["Title"] = "Create Playlist";
}

<div class="container mx-auto">
    <h2 class="text-3xl font-bold mb-8">Create Playlist</h2>

    <form asp-action="Create" method="post" class="space-y-6">
        <div>
            <label for="name" class="block text-sm font-medium mb-2">Playlist Name</label>
            <input type="text" name="name" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white" required />
        </div>
        <button type="submit" class="bg-green-500 hover:bg-green-400 text-white px-4 py-2 rounded">Create</button>
    </form>

    <p class="mt-8"><a asp-action="Index" class="text-green-500 hover:text-green-400">Back to Playlists</a></p>
</div>