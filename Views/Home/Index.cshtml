@{
    ViewData["Title"] = "RuneWave";
}

<div class="container mx-auto">
    <h1 class="text-4xl font-bold mb-8">Welcome to RuneWave</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <p class="text-xl mb-8">Hello, @User.Identity.Name!</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-gray-800 p-6 rounded-lg">
                <h5 class="text-2xl font-semibold mb-4">Your Songs</h5>
                <p class="text-gray-300 mb-4">Manage and play your uploaded songs.</p>
                <a asp-controller="Songs" asp-action="Index" class="bg-green-500 hover:bg-green-400 text-white px-4 py-2 rounded">Go to Songs</a>
            </div>
            <div class="bg-gray-800 p-6 rounded-lg">
                <h5 class="text-2xl font-semibold mb-4">Your Playlists</h5>
                <p class="text-gray-300 mb-4">Create and manage your playlists.</p>
                <a asp-controller="Playlists" asp-action="Index" class="bg-green-500 hover:bg-green-400 text-white px-4 py-2 rounded">Go to Playlists</a>
            </div>
        </div>
    }
    else
    {
        <p class="text-xl mb-8">Sign in to access your music library.</p>
        <a asp-controller="Account" asp-action="Login" class="bg-green-500 hover:bg-green-400 text-white px-4 py-2 rounded mr-4">Login</a>
        <a asp-controller="Account" asp-action="Register" class="bg-gray-600 hover:bg-gray-500 text-white px-4 py-2 rounded">Register</a>
    }
</div>
