@model dynamic

@{
    ViewData["Title"] = "Upload Song";
}

<div class="container mx-auto">
    <h2 class="text-3xl font-bold mb-8">Upload Song</h2>

    <form asp-action="Upload" method="post" enctype="multipart/form-data" class="space-y-6">
        <div>
            <label for="file" class="block text-sm font-medium mb-2">Select MP3 File</label>
            <input type="file" name="file" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white" accept=".mp3" required />
        </div>
        <div>
            <label for="title" class="block text-sm font-medium mb-2">Title</label>
            <input type="text" name="title" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white" />
        </div>
        <div>
            <label for="artist" class="block text-sm font-medium mb-2">Artist</label>
            <input type="text" name="artist" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white" />
        </div>
        <div>
            <label for="album" class="block text-sm font-medium mb-2">Album</label>
            <input type="text" name="album" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white" />
        </div>
        <button type="submit" class="bg-green-500 hover:bg-green-400 text-white px-4 py-2 rounded">Upload</button>
    </form>

    <p class="mt-8"><a asp-action="Index" class="text-green-500 hover:text-green-400">Back to Songs</a></p>
</div>